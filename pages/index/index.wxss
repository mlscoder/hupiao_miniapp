@import "../../lib/weui.wxss";

.page-section{
  margin-bottom: 20rpx;
}



/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.index{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.btn-area {
  display: flex;
  flex-direction: row;
  margin-top: 30px;
}
.btn-area .button {
  width: 100px;
}
.left{
  right: 15px;
  border: 1px solid #4cae4c;
  background-color: #5cb85c;
  font-size: 15px;
  color: #FFF;
}
.btn-area .button.custom {
  left: 15px;
  background-color: #0377e4;
  border-color: #0377e4;
}
.help{
  background-color: #e48c09;
  border-color: #e48c09;
}
.button {
  border: 1px solid #4cae4c;
  background-color: #5cb85c;
  font-size: 15px;
  color: #FFF;
}

.title{
  align-items: center;
  margin-top: .77em;
  margin-bottom: .3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #006dfc;
  font-size: 30rpx;
}