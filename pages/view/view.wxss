.container{
  overflow-y:hidden;
  overflow-x:hidden;
  display: flex;
  align-items: center;

}

/**index.wxss**/
.userinfo {
   display: flex;
  align-items: center;
  flex-direction: column;
   margin-top: -200rpx
}

.userphone {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx
}


.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 400rpx;
}
.url{
  margin-top: 10rpx;
}
.history{
  margin-top: 10rpx;
  font-size: 36rpx
}
.content{
    padding: 10rpx 10rpx;
    margin-top:20rpx;
}



.main_top {
    height: 88rpx;
    display: flex;
    position: fixed;
    z-index: 4;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
}

.main_top_city {
    padding: 16rpx 0;
    width: 150rpx;
    display: flex;
    justify-content: center;
}

.main_top_city .city_icon {
    display: block;
    width: 24rpx;
    height: 24rpx;
    margin-left: 16rpx;
    margin-top: 16rpx;
}

.main_top_city text {
    color: #888;
    font-size: 28rpx;
    line-height: 56rpx;
}

.main_top_search {
    flex: 1;
    display: flex;
    justify-content: center;
    height: 56rpx;
    border-radius: 6rpx;
    background: #f2f6fd;
    margin: 16rpx 18rpx 16rpx 0;
}

.main_top_search image {
    display: block;
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
    margin-top: 15rpx;
}

.main_top_search text {
    font-size: 30rpx;
    color: #9C9C9D;
    line-height: 56rpx;
}

.city_box {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    background: rgba(0,0,0,0.4);
    z-index: 22;
}

.city_sj {
    position: absolute;
    top: 57rpx;
    left: 45rpx;
    border: 14rpx;
    border-style: dashed dashed solid dashed;
    border-color: transparent transparent #fff transparent;
    z-index: 3;
}

.city_select {
    position: absolute;
    top: 82rpx;
    left: 13rpx;
    background: #fff;
    width: 200rpx;
    border-radius: 6rpx;
}

.city_select text {
    display: block;
    width: 200rpx;
    text-align: center;
    font-size: 34rpx;
    color: #2f2f2f;
    line-height: 88rpx;
    height: 88rpx;
}

.city_select text.cur {
    color: #4fcbff;
}

.banner {
    position: fixed;
    top: 88rpx;
    left: 0;
    right: 0;
    height: 80rpx;
    z-index: 5;
    box-shadow: 0 10rpx 20rpx 1rpx rgba(80,80,80,0.1);
}

.filter-tab {
    display: flex;
    flex-direction: row;
    background: #fff;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ddd;
    height: 80rpx;
}

.filter-tab view {
    height: 80rpx;
    width: 25%;
    text-align: center;
    line-height: 80rpx;
    color: #888;
    font-size: 28rpx;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.filter-tab view text {
    display: inline-block;
    max-width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.filter-tab view:before {
    content: "";
    position: absolute;
    width: 1rpx;
    height: 36rpx;
    background: #ddd;
    right: 0;
    top: 22rpx;
}

.filter-tab view:last-child:before {
    width: 0;
}

.filter-tab view image {
    display: inline-block;
    width: 16rpx;
    height: 8rpx;
    margin-left: 10rpx;
    margin-right: 1rpx;
    vertical-align: 30rpx;
}

.filter-tab view.active {
    color: #4fcbff;
}

.filter-tab view text.active {
    color: #4fcbff;
}

.filter-content {
    width: 100%;
    background: #fff;
    z-index: 6;
    position: absolute;
    top: 80rpx;
    left: 0;
}

.area-panel {
    height: 640rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
    overflow: hidden;
}

.area-panel-left {
    width: 25%;
    display: flex;
    flex-direction: column;
    background: #f7f7f7;
}

.area-panel text {
    display: block;
    width: 80%;
    padding-left: 20%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.area-panel-left text.cur {
    background: #fff;
    color: #38a1db;
}

.area-panel-center {
    width: 25%;
    background: #fafafa;
    height: 640rpx;
}

.area-panel-center text.active {
    background: #fff;
    color: #38a1db;
}

.area-panel-right {
    flex: 1;
    margin-left: 40rpx;
    height: 640rpx;
}

.area-panel-right text {
    box-sizing: border-box;
    border-bottom: 1rpx solid #eee;
    width: 100%;
    padding: 0;
}

.area-panel-right text.active {
    color: #4fcbff;
}

.common-panel {
    display: flex;
    flex-direction: column;
    background: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
}

.common-panel text {
    width: 100%;
    padding: 0;
    text-align: center;
    border-bottom: 1rpx solid #eee;
}

.common-panel text.active {
    background: #fff;
    color: #38a1db;
}

.filter-shadow {
    position: fixed;
    left: 0;
    width: 100%;
    top: 0;
    bottom: 0;
    z-index: 3;
    background: rgba(0,0,0,.5);
}

.data_status {
    text-align: center;
    display: block;
    font-size: 24rpx;
    line-height: 60rpx;
    color: #888;
}

.more-panel {
    position: relative;
    background: #fff;
    font-size: 26rpx;
    height: 1000rpx;
}

.more-panel .more-content {
    padding-bottom: 230rpx;
    margin: 0 20rpx;
}

.more-panel .more-content .character {
    padding: 30rpx 0 20rpx;
    text-align: center;
    color: #8998a0;
    font-weight: normal;
    line-height: 1;
}

.more-panel .more-content ul li {
    color: #4d5c6b;
    box-sizing: border-box;
    border: 2rpx solid #f2f6fe;
    background: #f2f6fe;
    height: 68rpx;
    line-height: 68rpx;
    border-radius: 34rpx;
    text-align: center;
    flex: 1;
    min-width: 156rpx;
    margin: 0 10rpx 10rpx;
}

.more-panel .more-content .feature {
    justify-content: flex-start;
}

.more-panel .more-content .feature li {
    width: 24%;
    margin: 0;
    margin-right: 1.333333%;
    flex: none;
    margin-bottom: 10rpx;
}

.more-panel .more-content .feature li:nth-child(4n) {
    margin-right: 0rpx;
}

.more-panel .more-content ul {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    box-sizing: border-box;
}

.more-panel .more-content ul .active {
    background: #fff;
    color: #4fcbff;
    border: 1px solid #4fcbff;
}

.more_sure {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    display: flex;
    border-top: 1rpx solid #eee;
    text-align: center;
    line-height: 120rpx;
    font-size: 30rpx;
    background: #fff;
}

.more_sure .item {
    flex: 1;
}

.more_sure .item button {
    margin-top: 20rpx;
    height: 80rpx;
    width: 90%;
    background: #4fcbff;
    border: none;
    border-radius: 40rpx;
    color: #fff;
    line-height: 80rpx;
}

.more_sure .clear {
    padding-left: 60rpx;
    text-align: left;
}

.more_sure .active {
    color: #4fcbff;
}

.area-panel-near {
    flex: 1;
}

.area-panel-near .active {
    color: #38a1db;
}

.area-panel-near text {
    text-align: left;
    padding-left: 50rpx;
    width: 100%;
    border-bottom: 1rpx solid #ddd;
}