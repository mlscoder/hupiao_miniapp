/* 添加CSS 特效 */
.error-banner {
  background:red;
  height:0px;
  width:100vw;
  position: fixed;
  z-index: 100;
  left: 0px;
  top: 0px;
  text-align: center;
  opacity: 0;
}

.error-banner .error-label {
   color: #FFF;
   font-size: 14px;
   line-height:30px;
} 

.codeBtn{
  position: absolute;
  right: -70%;
  top: -5rpx;
  color: rgb(41, 39, 39);
  width: 60%;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.row{
  position: relative;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}